<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#33B5E5" />
            <stroke
                android:width="1dp"
                android:color="#33B5E5" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#F0F0F0" />
            <stroke
                android:width="1dp"
                android:color="#D8D8D8"
                 />
        </shape>
    </item>
</selector>