<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EEC591" />
            <stroke
                android:width="1dp"
                android:color="#CD853F" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#EEC591"
                android:endColor="#CD853F"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#CD853F" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
</selector>

